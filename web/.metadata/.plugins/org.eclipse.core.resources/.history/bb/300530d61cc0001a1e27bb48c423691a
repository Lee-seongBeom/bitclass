package com.bit.dept;

import java.sql.Connection;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.ArrayList;

import com.bit.util.MyOracle;

public class DeptCRUD {

	private Connection conn;
	private Statement stmt;
	private ResultSet rs;
	
	
	public ArrayList<DeptDto> list() throws SQLException{
		
		ArrayList<DeptDto> list =new ArrayList<DeptDto>();
		String sql="select * from dept order by num desc";
		try{
			conn=MyOracle.getConn();
			stmt=conn.createStatement();
			rs=stmt.executeQuery(sql);
			
			while(rs.next()){
				DeptDto bean= new DeptDto();
				bean.getNum(rs.getInt("num"));
				bean.getId(rs.getString("id"));
				bean.getName(rs.getString("name"));
				bean.getLev(rs.getInt("lev"));
				list.add(bean);
			}
			
		}finally{
			if(rs!=null)rs.close();
			if(stmt!=null)stmt.close();
			if(conn!=null)conn.close();
		}
		
		
		return list;
		
	}
}











