package com.bit.day20;

class Com{
	void play(){
		System.out.print(" 열심히 총을 쏜다.");
	}
}


class Ball{
	String color="검은색";
	
	void play(){
		System.out.print(color+" 공이 굴러갑니다.");
	}
	
}

class BaseBall extends Ball{
	String color="흰색";

	void play(){
		System.out.print("던지고 놀수도 있습니다.");
	}
}

class Bowling extends Ball{
	String color="주황색";
	
	
	void play(){
		System.out.print("핀을 향해 ");
		super.play();
	}
	
	
}

class Box{
	private Ball myBall;
	
	void push(Ball myBall){
		this.myBall = myBall;
	}
	
	Ball pull(){
		return myBall;
	}
}



public class Ex08 {

	public static void main(String[] args) {
		BaseBall base=new BaseBall();
		Bowling bowl = new Bowling();
		
		
		Box box=new Box();
		box.push(base);
		
		Ball ball2=box.pull();
		ball2.play();
		
		
	}

}












